<p id="notice"><%= notice %></p>
<%= stylesheet_link_tag "style.css" %>

<h1>Tokimons</h1>
<%= form_tag tokimons_path, :method => 'get' do %>
   
     <%= text_field_tag :search, params[:search] %>
     <%= submit_tag "Search", :name => nil %>
   
 <% end %>
 <br />
<table>
  <thead>
    <tr>
      <th><%= link_to "Name", :sort => "name" %></th>
      <th><%= link_to "Weight", :sort => "weight" %></th>
      <th><%= link_to "Height", :sort => "height" %></th>
      <th>Fly</th>
      <th>Fight</th>
      <th>Fire</th>
      <th>Water</th>
      <th>Electric</th>
      <th>Ice</th>
      <th>Total</th>
      <th>Trainer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tokimons.each do |tokimon| %>
      <tr>
        <td><%= tokimon.name %></td>
        <td><%= tokimon.weight %></td>
        <td><%= tokimon.height %></td>
        <td><%= tokimon.fly %></td>
        <td><%= tokimon.fight %></td>
        <td><%= tokimon.fire %></td>
        <td><%= tokimon.water %></td>
        <td><%= tokimon.electric %></td>
        <td><%= tokimon.ice %></td>
        <% tokimon.calculate_total %>
        <td><%= tokimon.total %></td>
        <td><%= tokimon.trainer.name %></td>
        <td><%= link_to 'Show', tokimon %></td>
        <td><%= link_to 'Edit', edit_tokimon_path(tokimon) %></td>
        <td><%= link_to 'Destroy', tokimon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tokimon', new_tokimon_path %>
<%= link_to 'Show Trainers', trainers_path %>
